<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/bg_btn"
        android:text="确认添加"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/et_new_helper"
        app:layout_constraintStart_toStartOf="@+id/et_new_helper"
        app:layout_constraintTop_toBottomOf="@+id/et_help_subject" />

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_new_helper"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="39dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_input_2"
        android:ems="10"
        android:hint="请输入新帮扶对象ID"
        android:inputType="number"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/et_help_subject"
        android:layout_width="0dp"
        android:layout_height="49dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/bg_input_2"
        android:ems="10"
        android:hint="请输入帮扶科目"
        android:inputType="textPersonName"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/et_new_helper"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_new_helper"
        app:layout_constraintTop_toBottomOf="@+id/et_new_helper" />


</androidx.constraintlayout.widget.ConstraintLayout>