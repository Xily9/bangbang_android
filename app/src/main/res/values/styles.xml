<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorSecondary">#757575</item>
        <item name="colorThird">@color/blue</item>
        <item name="actionBarTheme">@style/toolbarThemeLight</item>
        <item name="navHeaderBackgroundColor">@color/white_light</item>
        <item name="searchViewStyle">@style/Widget.AppCompat.SearchView.ActionBar</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="titleTextAppearance">@style/ToolbarTitle</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <item name="android:dropDownVerticalOffset">4dp</item>
    </style>

    <style name="toolbarThemeLight">
        <item name="colorControlNormal">#757575</item>
        <item name="titleTextColor">#212121</item>
    </style>

    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>
